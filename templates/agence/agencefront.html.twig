<script>
const agencies = {{ listX|json_encode|raw }};

   // Iterate through each agency and create a dataset for Chart.js
   const datasets = agencies.map((agence, index) => {
      return {
         label: `Agency ${index + 1}`,
         data: agence.avis.note,
         borderWidth: 1,
      };
   });

   const ctx = document.getElementById('myChart').getContext('2d');

   new Chart(ctx, {
      type: 'bar',
      data: {
         labels: ['1', ' 2', ' 3', ' 4', ' 5'],
         datasets: datasets,
      },
      options: {
         scales: {
            y: {
               beginAtZero: true,
            },
         },
      },
   });
   
   
